<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.Capital" table="capital">
        <meta attribute="class-description">This class
            contains developer's details.
        </meta>
        <id name="capitalId" type="integer" column="capital_id">
            <generator class="native"/>
        </id>
        <property name="capitalName" column="capital_name" type="text"/>
        <property name="capitalPrice" column="capital_price" type="double"/>
        <property name="usefullLife" column="usefull_life" type="integer"/>
    </class>

</hibernate-mapping>