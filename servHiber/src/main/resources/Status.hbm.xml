<?xml version="1.0" encoding="utf-8"?><!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.Status" table="status">
        <meta attribute="class-description">This class
            contains developer's details.
        </meta>
        <id name="statusId" type="integer" column="status_id">
            <generator class="native"/>
        </id>
        <property name="status" column="status" type="text"/>

    </class>

</hibernate-mapping>